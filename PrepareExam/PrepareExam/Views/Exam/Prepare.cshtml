            <div class="form-group row" style="justify-content:center">
                <div class="col-6">
                    <button id="SaveExam" class="btn btn-primary form-control">
                        Sınav Oluştur
                    </button>
                </div>
            </div>
        </form>

    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/form.js"></script>
