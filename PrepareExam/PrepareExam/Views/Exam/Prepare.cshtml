@model PrepareExam.Models.ViewModels.ExamPartsViewModel
@{
    ViewData["Title"] = "Sınav Oluştur";
    var bloglist = ViewBag.Bloglist as List<SelectListItem>;
}
<style>
    .dnone {
        display: none;
    }

    #examform label {
        display: flex;
    }

    label.error {
        color: red;
    }
</style>
<h1 style="text-align:center">Sınav Oluştur</h1>


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Library</li>
    </ol>
</nav>

@* style="text-align: -webkit-center" *@
<div class="row" style="justify-content:space-around">
    <div class="col-md-12">
        <form id="examform">
            <div class="form-group">
                <h3>Yazı Başlığı</h3>
                <div class="col-md-12 m-0 p-0">

                    @Html.DropDownListFor(m => m.Blog.Id, bloglist, "-Lütfen bir başlık şeçiniz-", new { @class = "form-control blogdropdown col-md-12" })
                    <span id="s1Dropdown" class="text-danger"></span>

                </div>
                <div id="textarea" class="col-md-12 mt-2 dnone">
                    <textarea class="col-md-12" id="blogcontent" style="height:fit-content !important"></textarea>
                </div>
                <div class="col-md-12 mt-1 mb-1 p-0 border rounded">
                    @* Question1 *@
                    <div class="col-md-10 mt-2 ">
                        <h5>Soru 1</h5>
                        <input id="question1" name="questions" placeholder="Soru..." class="form-control">
                        <span id="question1span" class="text-danger"></span>
                    </div>
                    <div class="col-md-10 mt-1 mb-1 p-1">
                        <div class="pl-2 input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping">A</span>
                            <input id="s1c1" type="text" name="answer" class="form-control " placeholder="Cevap 1" aria-label="Cevap 1" aria-describedby="addon-wrapping">
                        </div>
                        <div class="pl-2 input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping">B</span>
                            <input id="s1c2" type="text" name="answer" class="form-control" placeholder="Cevap 2" aria-label="Cevap 2" aria-describedby="addon-wrapping">
                        </div>
                        <div class="pl-2 input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping">C</span>
                            <input id="s1c3" type="text" name="answer" class="form-control" placeholder="Cevap 3" aria-label="Cevap 3" aria-describedby="addon-wrapping">
                        </div>
                        <div class="pl-2 input-group flex-nowrap">
                            <span class="input-group-text" id="addon-wrapping">D</span>
                            <input id="s1c4" type="text" name="answer" class="form-control" placeholder="Cevap 4" aria-label="Cevap 4" aria-describedby="addon-wrapping">
                        </div>
                        <span id="question1Answers" class="text-danger"></span>
                        <div class="col-md-12 mt-1 mb-1 p-1">
                            <select id="selectTrue1" class="form-control col-md-12 mt-1" name="chose_correct">
                                <option value="default" disabled selected>Doğru cevabı belirleyiniz</option>
                                <option value="s1c1">A</option>
                                <option value="s1c2">B</option>
                                <option value="s1c3">C</option>
                                <option value="s1c4">D</option>
                            </select>
                        </div>
                        <span id="question1Correct" class="text-danger"></span>

                    </div>
                    <hr />
